@model IEnumerable<Services.EntityModels.User>

@{
    Layout = "_AdminLayout";
}
<div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
 <p class="">
   
</p>
@if (@ViewBag.SuccessMessage != null && @ViewBag.SuccessMessage != "" && @ViewBag.SuccessMessage != string.Empty)
{
    <div id="successMessage" class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

@if (@ViewBag.ErrorMessage != null && @ViewBag.ErrorMessage != "" && @ViewBag.ErrorMessage != string.Empty)
{
    <div id="errorMessage" class="alert alert-danger"  role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<p class="">
    <a type="buton" href="Admin/Create" class="btn btn-create">+ Create</a>
</p>
</div>

<div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
    <div class="u-expanded-width u-table u-table-responsive u-table-1">
        <table class="u-table-entity u-table-entity-1">
            <colgroup>
                <col width="15%">
                <col width="15%">
                <col width="15%">
                <col width="15%">
                <col width="15%">
                <col width="25%">
            </colgroup>
            <thead class="u-custom-font u-font-courier-new u-palette-4-base u-table-header u-table-header-1">
                <tr style="height: 58px;">
                    <th class="u-table-cell">FirstName </th>
                    <th class="u-table-cell">LastName </th>
                    <th class="u-table-cell">EmailAddress </th>
                    <th class="u-table-cell">ContactNumber </th>
                    <th class="u-table-cell">Role</th>
                    <th class="u-table-cell">Actions</th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tbody class="u-table-body">
                    <tr style="height: 55px;">
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.FirstName</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.LastName</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.EmailAddress</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.ContactNumber</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.Role</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>
                    </tr>

                </tbody>

            }

        </table>
    </div>
</div>


