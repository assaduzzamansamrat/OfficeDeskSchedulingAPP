@model IEnumerable<Services.EntityModels.TeamDetails>

@{
    Layout = "_AdminLayout";
}
<div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
 <p class="">
   
</p>
@if (@ViewBag.SuccessMessage != null && @ViewBag.SuccessMessage != "" && @ViewBag.SuccessMessage != string.Empty)
{
    <div id="successMessage" class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

@if (@ViewBag.ErrorMessage != null && @ViewBag.ErrorMessage != "" && @ViewBag.ErrorMessage != string.Empty)
{
    <div id="errorMessage" class="alert alert-danger"  role="alert">
        @ViewBag.ErrorMessage
    </div>
}
</div>
<p class="" style="margin-left: 60px;" >
    <a type="buton" href="~/Admin/TeamCreate" class="btn btn-create">+ Create</a>
</p>
<div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
    <div class="u-expanded-width u-table u-table-responsive u-table-1">
        <table class="u-table-entity u-table-entity-1">
            <colgroup>
                <col width="25%">
                <col width="25%">
                <col width="25%">
                <col width="25%">

            </colgroup>
            <thead class="u-custom-font u-font-courier-new u-palette-4-base u-table-header u-table-header-1">
                <tr style="height: 58px;">
                    <th class="u-table-cell">Team Id </th>
                    <th class="u-table-cell">Manager Name </th>
                    <th class="u-table-cell">Team Name </th>
                    <th class="u-table-cell">Actions </th>

                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tbody class="u-table-body">
                    <tr style="height: 55px;">
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.Id</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.ManagerName</td>
                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">@item.TeamName</td>

                        <td class="u-border-1 u-border-grey-30 u-border-no-left u-border-no-right u-table-cell">
                            @Html.ActionLink("Edit", "TeamEdit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "TeamDetails", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "TeamDelete", new { id = item.Id })
                        </td>
                    </tr>

                </tbody>

            }

        </table>
    </div>
</div>




